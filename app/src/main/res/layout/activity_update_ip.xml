<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/homebackground"
        android:orientation="vertical"
        tools:context=".Activity.updateIpActivity">
    <RelativeLayout
            android:id="@+id/title_bar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/blue"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="0dp">
        <include layout="@layout/common_back_btn"/>
        <TextView
                android:id="@+id/tv_lock_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="IP配置"
                android:textColor="@color/white"
                android:textSize="20sp" />
    </RelativeLayout>
    <LinearLayout
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="132dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical"
            android:background="@drawable/homemokuai">
        <LinearLayout
                android:paddingTop="@dimen/margin_20"
                android:paddingBottom="@dimen/margin_10"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="@dimen/margin_10"
                android:layout_marginEnd="@dimen/margin_10"
                android:orientation="horizontal"
                android:layout_weight="1">
            <TextView
                    android:layout_width="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="IP地址："
                    android:textColor="#ff333333"
                    android:textSize="15sp" />
            <EditText
                    android:id="@+id/ed_ip"
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:hint="示例：192.168.1.1"
                    android:textColor="#ff333333"
                    android:textSize="13sp" />
        </LinearLayout>
        <LinearLayout
                android:paddingBottom="@dimen/margin_20"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="@dimen/margin_10"
                android:layout_marginEnd="@dimen/margin_10"
                android:orientation="horizontal"
                android:layout_weight="1">
            <TextView
                    android:layout_width="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:text="端口号："
                    android:layout_weight="1"
                    android:textColor="#ff333333"
                    android:textSize="15sp" />
            <EditText
                    android:inputType="number"
                    android:id="@+id/ed_duankou"
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:hint="示例：8000"
                    android:textColor="#ff333333"
                    android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>
    <android.support.v7.widget.AppCompatButton
            android:id="@+id/bt_ip"
            android:gravity="center"
            android:layout_marginTop="150dp"
            android:text="确认"
            android:textColor="@color/white"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_10"
            android:background="@color/blue"
            android:layout_width="match_parent"
            android:layout_height="46dp" />
</LinearLayout>